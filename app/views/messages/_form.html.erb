<%= form_with model: message, url: messages_path, class: "row g-3 align-items-end" do |form| %>
  <div class="col-12">
    <%= form.label :content, "Сообщение", class: "form-label fw-semibold" %>
    <%= form.text_area :content, rows: 3, class: "form-control", placeholder: "Напишите что-нибудь доброжелательное" %>
    <% if message.errors.any? %>
      <div class="text-danger small mt-2">
        <%= message.errors.full_messages.to_sentence %>
      </div>
    <% end %>
  </div>

  <div class="col-md-6 col-12">
    <div class="form-text">Вы общаетесь как <span class="fw-semibold"><%= session[:username] %></span></div>
  </div>

  <div class="col-md-6 col-12 text-md-end">
    <%= form.submit "Отправить", class: "btn btn-primary px-4" %>
  </div>
<% end %>
