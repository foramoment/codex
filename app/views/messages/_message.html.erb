<div class="rounded-2xl border border-slate-200 bg-white/90 p-4 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
  <div class="flex flex-wrap items-center justify-between gap-2 text-sm">
    <span class="inline-flex items-center gap-2 rounded-full bg-sky-50 px-3 py-1 font-semibold text-sky-700 ring-1 ring-sky-100">
      <span class="h-2 w-2 rounded-full bg-sky-500"></span>
      <%= message.username %>
    </span>
    <span class="text-xs text-slate-400"><%= l(message.created_at, format: :short) %></span>
  </div>
  <div class="mt-3 text-sm leading-relaxed text-slate-700"><%= simple_format(h(message.content)) %></div>
</div>
