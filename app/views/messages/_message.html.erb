<div class="border rounded-3 p-3 shadow-sm bg-white">
  <div class="d-flex justify-content-between align-items-center mb-1 flex-wrap gap-2">
    <div class="d-flex align-items-center gap-2">
      <span class="badge text-bg-light text-primary border"><%= message.username %></span>
    </div>
    <small class="text-muted"><%= l(message.created_at, format: :short) %></small>
  </div>
  <div class="mb-0 text-body"><%= simple_format(h(message.content)) %></div>
</div>
